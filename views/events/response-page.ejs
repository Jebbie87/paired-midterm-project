    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <link rel="stylesheet" href="/styles/font-awesome/css/font-awesome.min.css" type="text/css" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
   <script src="/scripts/app.js" ></script>

  </head>

 <body>

<!-- This is the area where the new user can choose the times they want to go to. Also includes counter -->
<div id="user-response">
  <table>

  <form id="response-time1" action="/events/uniqueurl" method="POST">
    <tr>
      <div class="time1">
        <%= eventTime1 %>
        <input class="yes" type="radio" name="going1" value="1">YES</input>
        <input class="no" type="radio" name="going1" value="0">NO</input>
        <%= counter1 %> people are going in this time slot!
      </div>
    </tr>

    <tr>
      <div class="time2">

        4:00 PM
        <input class="yes" type="radio" name="going2" value="1">YES</input>
        <input class="no" type="radio" name="going2" value="0">NO</input>
        <%= counter2 %> people are going in this time slot!
      </div>
    </tr>

    <tr>
      <div class="time3">
        6:00 PM
        <input class="yes" type="radio" name="going3" value="1">YES</input>
        <input class="no" type="radio" name="going3" value="0">NO</input>
        <%= counter3 %> people are going in this time slot!
      </div>
    </tr>

    <!-- The form where a new user will put in name and email and will also submit their times -->
    <div class="user-info">
      <input class="first-name" type="text" name="first-name">Please enter your first name here</input>
      <br>
      <input class="last-name" type="text" name="last-name">Please enter your last name here</input>
      <br>
      <input class="user-email" type="email" name="user-email">Please enter your email here</input>
      <br>
      <input class="submit" type="submit" value="submit">
    </div>

  </form>

  </table>
</div>

<!-- This box is where all the user responses will be -->
  <div class="user-responses">
  <% message.forEach(function(response) { %>
  <%= response %>
  <br>
  <%  }); %>
  </div>

  </body>

</html>
